<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/icon_of_dest"
        layout="@layout/marker_view"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="@dimen/margin_4dp"
        android:layout_marginVertical="@dimen/margin_4dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/terminal_address"
        style="@style/myapp.Text.RBlackChipsTitlte14Pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon_of_dest"
        android:layout_alignBottom="@id/icon_of_dest"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/margin_8dp"
        android:layout_toEndOf="@+id/icon_of_dest"
        tools:text="مشهد اول راه" />

</RelativeLayout>